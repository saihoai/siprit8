<div class="container text-center">

  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <div class="section-title center">
        {{ link.object.content }}
      </div>
		
      {% form 'contact' %}
      {% if form.posted_successfully? %}
      <div class="successForm feedback">
        <p>{{ 'contact.form.post_success' | t }}</p>
      </div>
      {% endif %}

      {% if form.errors %}
      <div class="errorForm feedback">
        <p>{{ 'contact.form.post_error' | t }}</p>
        {% for field in form.errors %}
        <p>{{ 'contact.form.post_field_error_html' | t: field: field, error: form.errors.messages[field] }}</p>
        {% endfor %}
      </div>
      {% endif %}
	
      <div id="contactFormWrapper">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="contactFormName">{{ 'contact.form.name' | t }}</label>
              <input type="text" id="contactFormName" class="form-control" name="contact[name]" placeholder="{{ 'contact.placeholder.name' | t }}" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="contactFormEmail">{{ 'contact.form.email' | t }}</label>
              <input type="email" class="form-control" id="contactFormEmail" name="contact[email]" placeholder="{{ 'contact.placeholder.email' | t }}" />
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <label for="contactFormTelephone">{{ 'contact.form.phone' | t }}</label>
          <input type="telephone" id="contactFormTelephone" class="form-control" name="contact[phone]" placeholder="{{ 'contact.placeholder.phone' | t }}" />
        </div>
        
        <div class="form-group">
          <label for="contactFormMessage">{{ 'contact.form.message' | t }}</label>
          <textarea rows="3" id="contactFormMessage" class="form-control" name="contact[body]" placeholder="{{ 'contact.placeholder.message' | t }}"></textarea>
        </div>
      	
        <button type="submit" class="btn tf-btn btn-default" id="contactFormSubmit">{{ 'contact.form.send' | t }}</button>
        
      </div>
      {% endform %}
    </div>
  </div>
</div>
